{
  "swagger": "2.0",
  "info": {
    "title": "Task Management API",
    "description": "API for managing tasks with user notifications and authentication.",
    "version": "1.0.0"
  },
  "host": "localhost:5000",
  "basePath": "/api",
  "schemes": ["http"],
  "paths": {
    "/tasks": {
      "get": {
        "summary": "Get all tasks",
        "description": "This endpoint returns a list of all tasks.",
        "responses": {
          "200": {
            "description": "A list of tasks",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "task_id": { "type": "integer" },
                  "task_name": { "type": "string" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new task",
        "description": "This endpoint allows you to create a new task.",
        "parameters": [
          {
            "name": "task_name",
            "in": "formData",
            "type": "string",
            "required": true,
            "description": "The name of the task to be created."
          }
        ],
        "responses": {
          "201": {
            "description": "Task successfully created",
            "schema": {
              "type": "object",
              "properties": {
                "task_id": { "type": "integer" },
                "task_name": { "type": "string" }
              }
            }
          },
          "400": {
            "description": "Bad request, task name is required."
          }
        }
      }
    },
    "/tasks/{task_id}": {
      "get": {
        "summary": "Get a task by ID",
        "description": "This endpoint returns a specific task based on the task ID.",
        "parameters": [
          {
            "name": "task_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "The ID of the task to be fetched."
          }
        ],
        "responses": {
          "200": {
            "description": "A single task object",
            "schema": {
              "type": "object",
              "properties": {
                "task_id": { "type": "integer" },
                "task_name": { "type": "string" }
              }
            }
          },
          "404": {
            "description": "Task not found"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login",
        "description": "This endpoint allows users to log in using their credentials (phone number and password).",
        "parameters": [
          {
            "name": "phone_number",
            "in": "formData",
            "required": true,
            "type": "string",
            "description": "The phone number of the user."
          },
          {
            "name": "password",
            "in": "formData",
            "required": true,
            "type": "string",
            "description": "The password of the user."
          }
        ],
        "responses": {
          "200": {
            "description": "Successful login",
            "schema": {
              "type": "object",
              "properties": {
                "access_token": { "type": "string" }
              }
            }
          },
          "400": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "summary": "Register",
        "description": "This endpoint allows users to register with their phone number and password.",
        "parameters": [
          {
            "name": "phone_number",
            "in": "formData",
            "required": true,
            "type": "string",
            "description": "The phone number of the user."
          },
          {
            "name": "password",
            "in": "formData",
            "required": true,
            "type": "string",
            "description": "The password of the user."
          }
        ],
        "responses": {
          "201": {
            "description": "User successfully registered"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    }
  }
}
